# MCP Framework Configuration
# Copy this file to .env and fill in your values
# Then call mcp_framework::load_env() at startup

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging level: debug, info, warn, error
RUST_LOG=info

# Debug mode (0 = disabled, 1 = enabled)
MCP_USE_DEBUG=0

# ============================================================================
# LLM PROVIDERS (REQUIRED FOR AGENTS)
# ============================================================================

# OpenAI API Key (https://platform.openai.com/api-keys)
# Models: gpt-5, gpt-4o, gpt-4-turbo
OPENAI_API_KEY=sk-

# Anthropic Claude API Key (https://console.anthropic.com/account/keys)
# Models: claude-sonnet-4-5-20250929, claude-3-opus-20250219, claude-3-haiku-20240307
ANTHROPIC_API_KEY=sk-ant-

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server name
MCP_SERVER_NAME=My MCP Server

# Server version
MCP_SERVER_VERSION=1.0.0

# Server host (where server listens)
MCP_SERVER_HOST=127.0.0.1

# Server port
MCP_SERVER_PORT=3000

# ============================================================================
# CLIENT CONFIGURATION
# ============================================================================

# Server URL for client connections
MCP_CLIENT_SERVER_URL=http://localhost:3000

# Request timeout in seconds
MCP_CLIENT_TIMEOUT_SECS=30

# Number of retry attempts for failed requests
MCP_CLIENT_RETRY_ATTEMPTS=3

# Auto-reconnect on connection loss (0 = disabled, 1 = enabled)
MCP_CLIENT_AUTO_RECONNECT=1

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Maximum iterations for agentic loop
MCP_AGENT_MAX_ITERATIONS=10

# Maximum tokens for LLM responses (None = unlimited)
MCP_AGENT_MAX_TOKENS=4096

# Temperature for LLM (0.0 = deterministic, 1.0+ = creative)
MCP_AGENT_TEMPERATURE=0.7

# ============================================================================
# AUTHENTICATION
# ============================================================================

# Bearer Token Authentication (simple token-based)
# MCP_AUTH_TOKEN=your-secret-bearer-token

# ============================================================================
# OAUTH 2.0 CONFIGURATION
# ============================================================================

# OAuth Client ID
# MCP_OAUTH_CLIENT_ID=your-client-id

# OAuth Client Secret
# MCP_OAUTH_CLIENT_SECRET=your-client-secret

# OAuth Authorization URL
# MCP_OAUTH_AUTH_URL=https://auth.example.com/authorize

# OAuth Token URL
# MCP_OAUTH_TOKEN_URL=https://auth.example.com/token

# OAuth Redirect URI
# MCP_OAUTH_REDIRECT_URI=http://localhost:3000/callback

# OAuth Scopes (comma-separated)
# MCP_OAUTH_SCOPES=read,write

# ============================================================================
# INSPECTOR CONFIGURATION
# ============================================================================

# Enable web inspector (0 = disabled, 1 = enabled)
MCP_INSPECTOR_ENABLED=1

# Inspector host
MCP_INSPECTOR_HOST=127.0.0.1

# Inspector port (default: 8123)
MCP_INSPECTOR_PORT=8123

# ============================================================================
# SESSION MANAGEMENT
# ============================================================================

# Session timeout in seconds (default: 3600 = 1 hour)
MCP_SESSION_TIMEOUT_SECS=3600

# ============================================================================
# OPTIONAL: EXTERNAL SERVICE INTEGRATIONS
# ============================================================================

# Example: Weather API
# WEATHER_API_KEY=your-weather-api-key

# Example: GitHub API Token
# GITHUB_TOKEN=ghp_your-github-token

# Example: Database Connection
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Example: Email Service
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password

# ============================================================================
# CUSTOM SETTINGS
# ============================================================================

# Add any other environment variables your application needs
# They will be available via std::env::var("VARIABLE_NAME")
